{
  "name": "nest-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "typesync",
    "prebuild": "rimraf dist",
    "build": "NODE_ENV=development nest build",
    "build:prod": "NODE_ENV=production nest build",
    "lint": "eslint \"./ormconfig.ts\" \"{src,test}/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"./ormconfig.ts\" \"{src,test}/**/*.{ts,js}\"",
    "up": "docker-compose up",
    "down": "docker-compose down --rmi all",
    "up:prod": "docker-compose -f docker-compose.prod.yaml up",
    "down:prod": "docker-compose -f docker-compose.prod.yaml down --rmi all && docker system prune",
    "start": "NODE_ENV=development nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=development node dist/src/main",
    "test": "MODE=TEST NODE_ENV=development jest --detectOpenHandles",
    "test:watch": "yarn test --watchAll -i",
    "test:cov": "yarn test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn test --config ./test/jest-e2e.json",
    "premigrate:show": "NODE_ENV=development rimraf dist && nest build",
    "premigrate:run": "NODE_ENV=development rimraf dist && nest build",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:test": "MODE=TEST NODE_ENV=development yarn typeorm",
    "migrate:show": "yarn typeorm migration:show",
    "migrate:show:test": "yarn typeorm:test migration:show",
    "migrate:create": "yarn typeorm migration:create -n",
    "migrate:generate": "yarn typeorm migration:generate -n",
    "migrate:run": "yarn typeorm migration:run",
    "migrate:run:test": "yarn typeorm:test migration:run",
    "migrate:revert": "yarn typeorm migration:revert",
    "migrate:revert:test": "yarn typeorm:test migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/platform-fastify": "^8.3.1",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "aws-sdk": "^2.1161.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "fastify-swagger": "^4.15.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.44",
    "typeorm-naming-strategies": "^3.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/eslint": "^8.4.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "27.4.0",
    "@types/node": "^17.0.21",
    "@types/pg": "^8.6.4",
    "@types/prettier": "^2.4.4",
    "@types/rimraf": "^3.0.2",
    "@types/source-map-support": "^0.5.4",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "typesync": "^0.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
